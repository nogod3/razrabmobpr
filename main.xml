<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Введите текст" />

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_blackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Черный текст" />

        <TextView
            android:id="@+id/layout1TxtView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="1" />

        <Button
            android:id="@+id/button_redText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Красный текст" />

        <TextView
            android:id="@+id/layout1TxtView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/layout1TxtView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_8sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Размер 8SP" />

        <TextView
            android:id="@+id/layout2TxtView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="РАЗМЕР - 8SP" />

        <Button
            android:id="@+id/button_24sp"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Размер 24SP" />

        <TextView
            android:id="@+id/layout2TxtView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="РАЗМЕР - 24SP" />

        <TextView
            android:id="@+id/layout2TxtView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/third_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/button_whiteBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Белый фон" />

        <TextView
            android:id="@+id/layout3TxtView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="БЕЛЫЙ ФОН" />

        <Button
            android:id="@+id/button_yellowBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Желтый фон" />

        <TextView
            android:id="@+id/layout3TxtView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="ЖЕЛТЫЙ ФОН" />

        <TextView
            android:id="@+id/layout3TxtView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text=""
            app:layout_constraintTop_toBottomOf="@id/layout3TxtView1"
            app:layout_constraintStart_toEndOf="@id/layout3TxtView1"
            app:layout_constraintEnd_toStartOf="@id/layout3TxtView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/roll_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="ROLL!" />

</LinearLayout>
